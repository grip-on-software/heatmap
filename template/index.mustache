<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="theme-color" content="#485fc7">
        <title data-message="title">Heatmap</title>

        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600" rel="stylesheet">
        <link rel="stylesheet" href="{{ visualization_url }}navbar.css">
    </head>
    <body>
        <nav class="navbar is-link" role="navigation"
        aria-label="main navigation" id="navbar">
        </nav>

        <main role="main">
            <div id="header">
                <div class="container">
                    <h1 class="title" data-message="title">Heatmap</h1>
                    <h2 class="subtitle is-6" data-message="subtitle"></h2>
                </div>
            </div>

            <div class="container">
                <section class="section is-small">
                    <div class="columns is-multiline">
                        <div class="column">
                            <div id="projectPicker" class="tabs is-toggle is-small"></div>
                        </div>
                        <div class="column is-narrow">
                            <div id="projectFilter" class="content is-small">
                            </div>
                        </div>
                        <div class="column is-narrow">
                            <div id="dataToggles">
                                <div id="dataPicker" class="tabs is-toggle is-small"></div>
                                <div id="weatherToggle"></div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div id="container">
                <div id="content">
                    <div class="container">
                        <section class="section">
                            <div id="calendar"></div>
                            <div id="filechanges"></div>
                        </section>
                    </div>
                </div>
            </div>
        </main>

        <script type="text/javascript" src="{{ visualization_url }}vendor.js"></script>
    </body>
</html>
